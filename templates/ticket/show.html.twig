{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>IsEscalated</th>
                <td>{{ ticket.isEscalated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ ticket.priority }}</td>
            </tr>
            <tr>
                <th>IsPrivate</th>
                <td>{{ ticket.isPrivate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsReopened</th>
                <td>{{ ticket.isReopened ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ ticket.created ? ticket.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Closed</th>
                <td>{{ ticket.closed ? ticket.closed|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticket_index') }}">back to list</a>

    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>

    <a href="{{ path('ticket_reopen', {'id': ticket.id}) }}">reopen</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
