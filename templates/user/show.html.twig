{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Noble Agent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ agent.username }}</td>
            </tr>
            <tr>
                <th>Full Name</th>
                <td>{{ agent.firstName ~ " " ~ agent.lastName }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ agent.roles ? agent.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ agent.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('agent_index') }}">back to list</a>

    <a href="{{ path('agent_edit', {'id': agent.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
