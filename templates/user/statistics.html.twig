{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>name</th>
            <th>Roles</th>
            <th>Open tickets</th>
            <th>Closed tickets</th>
            <th>Reopened tickets</th>
            <th>Closed/Reopened rate</th>
            <th>actions</th>
        </tr>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.user.id }}</td>
                <td>{{ agent.user.firstName ~ " " ~ agent.user.lastName }}</td>
                <td>
                    <ul>
                        {% for role in agent.user.roles %}
                            <li>{{ role }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    {{ agent.openTickets }}
                </td>
                <td>
                    {{ agent.closedTickets }}
                </td>
                <td>
                    {{ agent.reopenedTickets }}
                </td>
                <td>
                    {{ agent.PercentageRatio }}%
                </td>
                <td>
                    <a href="{{ path('agent_show', {'id': agent.user.id}) }}">show</a>
                </td>
            </tr>
        {% endfor %}
        </thead>
    </table>
{% endblock %}